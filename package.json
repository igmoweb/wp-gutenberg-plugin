{
  "name": "wp-gutenberg-plugin",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "Ignacio Cruz <igmoweb@gmail.com>",
  "license": "ISC",
  "scripts": {
    "build": "webpack --config=.config/webpack.config.prod.js",
    "start": "webpack-dev-server --config=.config/webpack.config.dev.js"
  },
  "devDependencies": {
    "@humanmade/webpack-helpers": "^0.6.1",
    "babel-eslint": "^10.0.3",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "system-bell-webpack-plugin": "^1.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "relative": true,
    "linters": {
      "**/*.{json,scss,css,html,js,php}": [
        "pretty-quick --staged",
        "eslint --fix",
        "./vendor/bin/phpcbf --standard=phpcs.ruleset.xml",
        "git add"
      ],
      "{package,composer,.eslintrc,Gruntfile}.{json,js}": [
        "pretty-quick --staged",
        "git add"
      ]
    }
  }
}
